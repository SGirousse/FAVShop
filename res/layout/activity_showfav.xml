<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_light" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
	    <TextView
	        android:id="@+id/textViewShowFavTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Article Title"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#000000" />
	
	    <LinearLayout 	         
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <LinearLayout 	         
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="1" >
	   	        
	   	        <TextView
			        android:id="@+id/textViewShowFavStore"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Boutique:"
		        	android:textColor="#000000"
		        	android:paddingRight="5dp" />
		        	
		        	<TextView
			        android:id="@+id/textViewShowFavStoreContent"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="storeName"
		        	android:textColor="#000000" />
	        
	        </LinearLayout>
	        
	        <LinearLayout 	         
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_weight="1" >
	        
		        <TextView
			        android:id="@+id/textViewShowFavBarcode"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Bar code:"
		        	android:textColor="#000000"
		        	android:paddingRight="5dp" />
		        	
	        	<TextView
			        android:id="@+id/textViewShowFavBarcodeContent"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="barCode"
			        android:textStyle="italic"
		        	android:textColor="#000000" />
		        	
        	 </LinearLayout>
	        
	    </LinearLayout>

		<LinearLayout 	         
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <LinearLayout 	         
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="1" >
	        
	     	    <TextView
			        android:id="@+id/textViewShowFavSailPrice"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Prix soldÃ©:"
		        	android:textColor="#000000"
		        	android:paddingRight="5dp" />
		        	
		        	<TextView
			        android:id="@+id/textViewShowFavSailPriceContent"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="sailPrice"
		        	android:textColor="#000000" />
		        	
        	 </LinearLayout>
	        
	        <LinearLayout 	         
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_weight="1" >
	        
	   	        <TextView
			        android:id="@+id/textViewShowFavInitPrice"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Prix initial:"
		        	android:textColor="#000000"
		        	android:paddingRight="5dp" />
		        	
	        	<TextView
			        android:id="@+id/textViewShowFavInitPriceContent"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="initPrice"
		        	android:textColor="#000000" />
		        	
       		</LinearLayout>    
	    </LinearLayout>
	
        <LinearLayout 	         
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="1" >
        	
       		<TextView
		        android:id="@+id/textViewShowFavPercent"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Remise de:"
	        	android:textColor="#000000"
	        	android:paddingRight="5dp" />
	        	
        	<TextView
		        android:id="@+id/textViewShowFavPercentContent"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="%"
	        	android:textColor="#000000" />
        	
       	</LinearLayout>
	
	    <ImageView
	        android:id="@+id/imageViewShowFavPic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@android:drawable/ic_menu_camera" />
	
		<LinearLayout 	         
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_weight="1" >
		        
		    <TextView
		        android:id="@+id/textViewShowFavDescription"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Description:"
		        android:textColor="#000000"
	        	android:paddingRight="5dp" />
		        
	        <TextView
		        android:id="@+id/textViewShowFavDescriptionContent"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="description"
		        android:textColor="#000000" />
		        
	         </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/imageButtonShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_share" />

        <ImageButton
            android:id="@+id/imageButtonSettup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_manage" />

        <ImageButton
            android:id="@+id/imageButtonInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_info_details" />
    </LinearLayout>
</RelativeLayout>